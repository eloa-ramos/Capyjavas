<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>

<?import java.lang.String?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/24.0.1"
            fx:controller="gui.UsuarioGUIController"
            style="-fx-background-color: white;">

    <!-- Cabeçalho com título -->
    <top>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 40 0 20 0;">
            <Label text="Cadastro de Usuários" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        </VBox>
    </top>

    <!-- Formulário Central -->
    <center>
        <GridPane hgap="20" vgap="15" alignment="CENTER" style="-fx-padding: 20;">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" />
                <ColumnConstraints prefWidth="300" />
                <ColumnConstraints halignment="RIGHT" />
                <ColumnConstraints prefWidth="300" />
            </columnConstraints>

            <!-- Nome -->
            <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="nomeUsuario" promptText="Ex: João Silva" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.columnSpan="3" />

            <!-- CPF -->
            <Label text="CPF:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="cpfUsuario" promptText="Digite apenas números" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <!-- Data de Nascimento -->
            <Label text="Data de Nascimento:" GridPane.rowIndex="1" GridPane.columnIndex="2" />
            <DatePicker fx:id="dataNascimentoUsuario" promptText="dd/mm/aaaa" GridPane.rowIndex="1" GridPane.columnIndex="3" />

            <!-- Cargo -->
            <Label text="Cargo:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <TextField fx:id="cargoUsuario" promptText="Escolha o Cargo" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="3" />

            <!-- Área -->
            <Label text="Área:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <TextField fx:id="areaUsuario" promptText="Defina a Área" GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.columnSpan="3" />

            <!-- Experiência -->
            <Label text="Experiência:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
            <TextField fx:id="experienciaUsuario" promptText="Experiência" GridPane.rowIndex="4" GridPane.columnIndex="1" GridPane.columnSpan="3" />

            <!-- Observações -->
            <Label text="Observações:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
            <TextField fx:id="observacoesUsuario" promptText="Observações" GridPane.rowIndex="5" GridPane.columnIndex="1" GridPane.columnSpan="3" />

            <!-- Tipo de Usuário -->
            <Label text="Tipo de Usuário:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
            <ComboBox fx:id="tipoUsuarioCombo" GridPane.rowIndex="6" GridPane.columnIndex="1" GridPane.columnSpan="3">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="RH" />
                        <String fx:value="Gestor de Área" />
                        <String fx:value="Gestor Geral" />
                        <String fx:value="Colaborador" />
                    </FXCollections>
                </items>
            </ComboBox>
        </GridPane>
    </center>

    <!-- Botões no rodapé -->
    <bottom>
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 30;">
            <Button fx:id="cadastrarUsuarioBtn" onAction="#clickCadastrar" text="Cadastrar"
                    style="-fx-background-color: #2e2e2e; -fx-text-fill: white; -fx-padding: 10 30; -fx-font-weight: bold;" />
            <Button fx:id="sairBtn" onAction="#clickSair" text="Sair"
                    style="-fx-background-color: #cccccc; -fx-text-fill: black; -fx-padding: 10 30;" />
        </HBox>
    </bottom>
</BorderPane>
